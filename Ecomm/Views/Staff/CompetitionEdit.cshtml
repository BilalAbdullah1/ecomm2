@model Ecomm.Models.Competitions
@{
    ViewData["Title"] = "CompetitionEdit";
    Layout = "~/Views/Shared/_Staff.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Competition</h4>
            <form asp-action="CompetitionEdit" enctype="multipart/form-data">
                <input asp-for="CopetitionId" type="hidden" class="form-control"/>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompStartDate">Start Date</label>
                    <input class="form-control" asp-for="CompStartDate" placeholder="Start Date">
                    <span asp-validation-for="CompStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompEndDate">End Date</label>
                    <input class="form-control" asp-for="CompEndDate" placeholder="End Date">
                    <span asp-validation-for="CompEndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwardDetails">Award Details</label>
                    <textarea cols="6" rows="6" class="form-control" asp-for="AwardDetails" placeholder="Awards Details"></textarea>
                    <span asp-validation-for="AwardDetails" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Competition" asp-controller="Staff">Cancel</a>
            </form>
        </div>
    </div>
</div>

