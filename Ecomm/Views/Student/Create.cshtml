@model Ecomm.ViewModels.StudentRegistration
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
    
            <div class="row flex-grow">
                <div class="col-lg-8 mx-auto">
                    <div class="auth-form-transparent text-left p-3">
                        <div class="brand-logo">
                            @*<img src="~/images/logo.svg" alt="logo">*@
                        </div>
                        <h4>New Student Registration</h4>
                        <h6 class="font-weight-light">Join us today! It takes only a few steps</h6>
                    <form asp-action="Create" class="pt-3" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input asp-for="StdFirstName" type="text" class="form-control form-control-lg" placeholder="First Name">
                                        <span asp-validation-for="StdFirstName" class="text-danger"></span>
                                    </div>
                          
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        <input asp-for="StdEmail" type="email" class="form-control form-control-lg" placeholder="Email">
                                        <span asp-validation-for="StdEmail" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="fa fa-lock text-primary"></i>
                                                </span>
                                            </div>
                                            <input asp-for="StdPassword" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">
                                            <div class="input-group-append bg-transparent">
                                                <span class="input-group-text bg-transparent border-left-0">
                                                    <i class="fa fa-eye toggle-password" style="cursor: pointer;"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="StdPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="fa fa-lock text-primary"></i>
                                                </span>
                                            </div>
                                        <input asp-for="StdConfirmPassword" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Confirm Password">
                                            <div class="input-group-append bg-transparent">
                                                <span class="input-group-text bg-transparent bosrder-left-0">
                                                <i class="fa fa-eye toggle-password" style="cursor: pointer;"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span @* asp-validation-for="ConfirmPassword" *@ class="text-danger">@ViewBag.msg</span>
                                    </div>
                            
                                    <div class="form-group">
                                        <label>Contact Number</label>
                                        <input asp-for="StdContact" type="tel" class="form-control form-control-lg" placeholder="Contact Number">
                                    <span asp-validation-for="StdContact" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input asp-for="StdLastName" type="text" class="form-control form-control-lg" placeholder="Last Name">
                                        <span asp-validation-for="StdLastName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input asp-for="StdAddress" type="text" class="form-control form-control-lg" placeholder="Address">
                                    <span asp-validation-for="StdAddress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Age</label>
                                        <input asp-for="StdAge" type="number" class="form-control form-control-lg" placeholder="Age">
                                        <span asp-validation-for="StdAge" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Date of Birth</label>
                                        <input asp-for="StdBirthDate" type="date" class="form-control form-control-lg">
                                        <span asp-validation-for="StdBirthDate" class="text-danger"></span>
                                    </div>
                                <div class="form-group">
                                    <label asp-for="ImageFile" class="form-label"></label>
                                    <input type="file" name="image" class="form-control" />
                                    @* <span asp-validation-for="ImageFile" class="text-danger"></span> *@
                                </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">Register</button>
                                <button type="reset" class="btn btn-secondary btn-lg font-weight-medium auth-form-btn">Reset</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-action="Login" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
     
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>


