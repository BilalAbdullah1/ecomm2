@model Ecomm.Models.Awards
@{
    ViewData["Title"] = "AwardsCreate";
    Layout = "~/Views/Shared/_Staff.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Awards</h4>
            <form asp-action="AwardsCreate" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="AwardDescription">Title</label>
                    <input type="text" class="form-control" asp-for="AwardDescription" placeholder="Award Description">
                    <span asp-validation-for="AwardDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remarks">Remarks</label>
                    <input class="form-control" asp-for="Remarks" placeholder="Remarks">
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentId" class="form-label">Students</label>
                    <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-control">
                        <option>Select Student</option>
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompetitionId" class="form-label">Competitions</label>
                    <select asp-for="CompetitionId" asp-items="ViewBag.Competitions" class="form-control">
                        <option>Select Competition</option>
                    </select>
                    <span asp-validation-for="CompetitionId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Awards" asp-controller="Staff">Cancel</a>
            </form>
        </div>
    </div>
</div>

