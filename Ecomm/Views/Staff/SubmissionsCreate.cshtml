@model Ecomm.Models.Submissions
@{
    ViewData["Title"] = "SubmissionsCreate";
    Layout = "~/Views/Shared/_Staff.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Submission</h4>
            <form asp-action="SubmissionsCreate" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Description">Title</label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StaffRemarks">Remarks</label>
                    <input class="form-control" asp-for="StaffRemarks" placeholder="Remarks">
                    <span asp-validation-for="StaffRemarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubmissionDate">Remarks</label>
                    <input class="form-control" asp-for="SubmissionDate" placeholder="Submission Date">
                    <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentId" class="form-label">Students</label>
                    <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-control">
                        <option>Select Student</option>
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompetitionId" class="form-label">Competitions</label>
                    <select asp-for="CompetitionId" asp-items="ViewBag.Competitions" class="form-control">
                        <option>Select Competition</option>
                    </select>
                    <span asp-validation-for="CompetitionId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="File" class="form-label"></label>
                    <input type="file" name="image" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Submissions" asp-controller="Staff">Cancel</a>
            </form>
        </div>
    </div>
</div>

